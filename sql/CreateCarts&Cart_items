

####"""Create the carts table."""####
CREATE TABLE carts (
    cart_id SERIAL PRIMARY KEY,
    user_id INTEGER NOT NULL,
    created_at TIMESTAMP WITHOUT TIME ZONE DEFAULT NOW(),
    updated_at TIMESTAMP WITHOUT TIME ZONE DEFAULT NOW(),
    CONSTRAINT fk_user
        FOREIGN KEY(user_id)
        REFERENCES users(id)
);


####"""Create the cart_items table."""####

CREATE TABLE cart_items (
    cart_item_id SERIAL PRIMARY KEY,
    cart_id INTEGER NOT NULL,
    wine_id INTEGER NOT NULL,
    quantity INTEGER NOT NULL CHECK (quantity > 0),
    price_at_addition DECIMAL(10,2),
    added_at TIMESTAMP WITHOUT TIME ZONE DEFAULT NOW(),
    CONSTRAINT fk_cart
        FOREIGN KEY(cart_id)
        REFERENCES carts(cart_id),
    CONSTRAINT fk_product
        FOREIGN KEY(wine_id)
        REFERENCES wines(id)
);







Example Query: "What did user X buy?"

SELECT
    p.purchase_id,
    p.purchased_at,
    w.wine_name,
    pi.quantity,
    pi.price_at_purchase,
    (pi.quantity * pi.price_at_purchase) AS subtotal
FROM purchases p
JOIN purchase_items pi ON p.purchase_id = pi.purchase_id
JOIN wines w ON pi.wine_id = w.id
WHERE p.user_id = $USER_ID
ORDER BY p.purchased_at DESC;



